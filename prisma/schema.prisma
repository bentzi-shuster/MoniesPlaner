// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// the User table is used to store the user's email and username from the auth provider
model Plan {
  id                  Int      @id @default(autoincrement())
  title               String
  rent                Float
  groceries           Float
  utilities           Float
  transportation      Float
  entertainment       Float
  propertyTax         Float?
  insurance           Float
  vehiclePayment      Float
  vehicleInsurance    Float
  personalCare        Float
  income              Float
  userSub             String   // User's unique identifier from Auth0 (`sub`)
  carMake             String?  // Optional field for car make
  carModel            String?  // Optional field for car model
  visibility          Boolean  @default(false)
  createdAt           DateTime @default(now())
  modifiedAt          DateTime?
}

model CachedData {
  id              Int      @id @default(autoincrement())
  url             String   @unique
  data            Json     // Store the scraped data as JSON
  createdAt           DateTime @default(now())
  modifiedAt          DateTime?
}

